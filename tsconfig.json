{
  "compilerOptions": {
    "outDir": "./ts-build",
    "jsx": "react-jsx",
    "jsxImportSource": "edgerender",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "src",
    "types": ["@cloudflare/workers-types", "@types/jest", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
